{
    "manifest_version": 3,
    "name": "Copy Link Text",
    "description": "Copy link text with a simple right-click menu button",
    "version": "1.0",
    "permissions": ["contextMenus", "storage", "scripting", "activeTab"],
    "background": {
        "service_worker": "observer.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "js": [
                "searcher.js"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "icons": {
    "16": "CLT16.png",
    "48": "CLT48.png",
    "128": "CLT128.png"
    }
}